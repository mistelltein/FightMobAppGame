<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <!-- Position 0: "Back" button -->
    <LinearLayout
        android:id="@+id/position0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|end"
        android:padding="16dp">
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_button"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Position 1: Upper row for wizards -->
    <FrameLayout
        android:id="@+id/position1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/wizard1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_wizard1"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="50dp" />
        <ImageView
            android:id="@+id/wizard2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_wizard2"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="50dp" />
        <ImageView
            android:id="@+id/projectile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_projectile"
            android:visibility="invisible" />
    </FrameLayout>

    <!-- Position 2: Middle row for wizards -->
    <FrameLayout
        android:id="@+id/position2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Position 3: Bottom row for wizards -->
    <FrameLayout
        android:id="@+id/position3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- HP and MP progress bars -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- First column (HP/MP for Player 1) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="32dp">
            <ProgressBar
                android:id="@+id/progressHP1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_hp"
                android:max="100"
                android:progress="100" />
            <ProgressBar
                android:id="@+id/progressMP1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_mp"
                android:max="50"
                android:progress="50"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Second column (HP/MP for Player 2) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressHP2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_hp"
                android:max="100"
                android:progress="100" />
            <ProgressBar
                android:id="@+id/progressMP2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progress_mp"
                android:max="50"
                android:progress="50"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Position 4: Control buttons -->
    <LinearLayout
        android:id="@+id/position4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Controls for Player 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnUp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/button_up"
                android:background="@drawable/button_background" />
            <Button
                android:id="@+id/btnDown"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/button_down"
                android:background="@drawable/button_background" />
            <Button
                android:id="@+id/btnAttack"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="@string/button_attack"
                android:background="@drawable/button_background" />
        </LinearLayout>

        <!-- Controls for Player 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnUp2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/button_up"
                android:background="@drawable/button_background" />
            <Button
                android:id="@+id/btnDown2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/button_down"
                android:background="@drawable/button_background" />
            <Button
                android:id="@+id/btnAttack2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="@string/button_attack"
                android:background="@drawable/button_background" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
